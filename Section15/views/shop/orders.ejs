</head>
<body>
    <%-include('../includes/navigation.ejs')%>

    <main>
        <% if(orders.length <= 0) { %>
        <h1>Nothing there!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1># <%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a> </h1> 
                    </li>
                            <ul>
                                <% order.products.forEach( p =>{ %>
                                    <li>
                                        <%= p.product.title %> (<%= p.quantity %>) 
                                <% }) %>
                            </ul>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </main>
    
    <%-include('../includes/end.ejs')%>