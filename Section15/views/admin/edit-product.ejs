<%-include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%-include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="<%if(editing){%>/admin/edit-product<%}else{%>/admin/add-product<%}%>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                class="<%= validationError?.find(e => e.param === 'title') ? 'invalid' : ''%>"
                type="text" 
                name="title" 
                id="title" 
                value="<%if(editing || hasError){%><%=product.title%><%}else{%><%}%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                class="<%= validationError?.find(e => e.param === 'imageUrl') ? 'invalid' : ''%>"
                type="text" 
                name="imageUrl" 
                id="imageUrl" 
                value="<%if(editing || hasError){%><%=product.imageUrl%><%} else{%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                class="<%= validationError?.find(e => e.param === 'price') ? 'invalid' : ''%>"
                type="number" 
                name="price" 
                id="price" 
                step="0.01" 
                value=<% if(editing || hasError){%> <%= product.price %> <%} else {%>  <% } %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                class="<%= validationError?.find(e => e.param === 'description') ? 'invalid' : ''%>"
                name="description" 
                id="description" 
                cols="30" 
                rows="5"><% if(editing || hasError){%><%=product.description%><%} else {%><%}%></textarea>
            </div>
            <% if(editing) { %>
                <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" ><% if(editing){%> Updata Product <%} else {%>   Add Product  <% } %>   </button>
        </form>
    </main>
<%-include('../includes/end.ejs')%>