extends layouts/main-layout.pug 
block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    if prods.length > 0
        .grid   
            each product in prods
                article.card.product-item   
                    header.card__header 
                        h1.product__title #{product.title}
                    div.card__image
                        img(src="https://dictionary.cambridge.org/es-LA/images/full/book_noun_001_01679.jpg?version=5.0.239", alt="book-img", style='width:100px;height:100px;')
                    div.card__content 
                        h2.product__price $19.99
                        p.product__description A very interesting book about so many even 
                    .card__actions 
                        button.btn Add to Cart
    else 
        h1 No product